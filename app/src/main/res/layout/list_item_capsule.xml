<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants"
    android:padding="5sp">


    <ImageView
        android:id="@+id/capsuleimg"
        android:layout_width="70sp"
        android:layout_height="70sp" />

    <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/capsuleimg"
        android:paddingLeft="20sp">

        <LinearLayout
            android:id="@+id/nameBlock"
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/capsulename"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Capsule Name"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/capsuledelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_delete_black_24dp"
                android:visibility="visible"
                android:layout_marginLeft="10sp"
                android:padding="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qtyBlock"
            android:padding="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameBlock">

            <TextView
                android:id="@+id/capsuleqty"
                android:layout_width="200sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:hint="@string/capsulesQty"
                android:textColor="@color/black"
                android:textSize="@dimen/subheading_text_size" />

            <ImageButton
                android:id="@+id/capsuleconso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:padding="10sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>