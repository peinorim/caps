<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:layout_marginTop="5dp"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/capsuleimg"
        android:layout_width="100sp"
        android:layout_height="100sp" />

    <RelativeLayout
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/capsuleimg"
        android:paddingLeft="20sp">

        <LinearLayout
            android:id="@+id/nameBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="300sp"
            android:padding="5sp">

            <TextView
                android:id="@+id/capsulename"
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Capsule Name"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/capsuledelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10sp"
                android:background="@drawable/ic_delete_black_24dp"
                android:padding="12sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qtyBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameBlock"
            android:padding="5sp">

            <TextView
                android:id="@+id/capsuleqty"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:gravity="center"
                android:hint="@string/capsulesQty"
                android:textColor="@color/black"
                android:textSize="@dimen/subheading_text_size" />

            <ImageButton
                android:id="@+id/capsuleconso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:padding="12sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>